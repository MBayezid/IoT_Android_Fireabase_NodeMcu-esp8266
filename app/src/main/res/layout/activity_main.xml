<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:visibility="gone"
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:drawableEnd="@drawable/baseline_refresh_24"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearButtonGroup" />
<LinearLayout

    android:id="@+id/linearButtonGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txtHomeComponents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Components"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/internetStateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet connection lost"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:visibility="gone"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>